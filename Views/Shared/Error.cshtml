@model ExpenseManagement.Models.ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

@if (Model.ShowRequestId)
{
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"></h1>
                </div>
                <div class="col-sm-6">
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="error-page">
            <h2 class="headline text-danger">500</h2>
            <div class="error-content text-white">
                <h3><i class="fas fa-exclamation-triangle text-danger"></i> Tüh! Bir hata oluştu. Hatanın açıklaması şu şekildeymiş:</h3>
                <p>
                    <h5><b>@Model.RequestMessage</b></h5>
                    Hemen site yöneticisi ile iletişime geçin ki durumu hızlıca çözelim.
                    Bu sırada <a asp-controller="Home" asp-action="Index">ana sayfaya dönüp</a> diğer işlerinize devam edebilirsiniz.
                </p>
                <a href="@Context.Request.Headers["Referer"].ToString()" class="btn btn-danger btn-block">Geri Dön</a>
            </div>
        </div>
    </section>
}