@model ExpenseManagement.Models.NewVehicleSales

@{
    ViewData["Title"] = "Sıfır Araç Satışını Sil";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-danger">
                    <h4>Bu araç satışını silmek istediğinizden emin misiniz?</h4>
                    <p>
                        Bu araç satışını silerseniz işlemi geriye alamayacaksınız.
                    </p>
                </div>
                <div class="invoice p-3 mb-3">
                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <i class="fa fa-folder-open"></i> @Html.DisplayFor(model => model.Id)
                                <br />
                                <small class="pull-left">Alış / Satış Tarihi: <strong>@Html.DisplayFor(model => model.PurchaseDate) / @Html.DisplayFor(model => model.SaleDate)</strong></small>
                                <br />
                            </h4>
                        </div>
                    </div>
                    <hr />
                    <div class="row invoice-info">
                        <div class="col-sm-4 invoice-col">
                            <address>
                                @Html.DisplayNameFor(model => model.VehiclePurchase.CarModel.CarBrand.Name): <strong>@Html.DisplayFor(model => model.VehiclePurchase.CarModel.CarBrand.Name)</strong><br>
                                @Html.DisplayNameFor(model => model.VehiclePurchase.CarModel.Name): <strong>@Html.DisplayFor(model => model.VehiclePurchase.CarModel.Name)</strong><br>
                                @Html.DisplayNameFor(model => model.VehiclePurchase.Chassis): <strong>@Html.DisplayFor(model => model.VehiclePurchase.Chassis)</strong><br>
                                @Html.DisplayNameFor(model => model.Salesman): <strong>@Html.DisplayFor(model => model.Salesman.Name)</strong><br>
                            </address>
                        </div>
                        <div class="col-sm-4 invoice-col">
                            <address>
                                @Html.DisplayNameFor(model => model.PurchaseDate): <strong>@Html.DisplayFor(model => model.PurchaseDate)</strong><br>
                                @Html.DisplayNameFor(model => model.SaleDate): <strong>@Html.DisplayFor(model => model.SaleDate)</strong><br>
                                @Html.DisplayNameFor(model => model.SaleAmount): <strong>@Html.DisplayFor(model => model.SaleAmount) @Html.DisplayFor(model => model.SaleAmountCurrencyName)</strong><br>
                                @Html.DisplayNameFor(model => model.VehicleCost): <strong>@Html.DisplayFor(model => model.VehicleCost) @Html.DisplayFor(model => model.VehicleCostCurrencyName)</strong><br>
                                @Html.DisplayNameFor(model => model.TaxExempt): <strong>@Html.DisplayFor(model => model.TaxExempt)</strong><br>
                            </address>
                        </div>
                    </div>
                    <hr />
                    <div class="row invoice-info">
                        <div class="col-sm-12 invoice-col">
                            <address>
                                @Html.DisplayNameFor(model => model.WarrantyPlus): <strong>@Html.DisplayFor(model => model.WarrantyPlus)</strong><br>
                                @Html.DisplayNameFor(model => model.Description): <strong>@Html.DisplayFor(model => model.Description)</strong><br>
                            </address>
                        </div>
                    </div>
                    <hr />
                    <div class="row no-print">
                        <div class="col-12">
                            <input type="hidden" asp-for="Id" id="id" />
                            <input type="submit" value="Evet" class="btn btn-danger float-right" onclick="deleted()" />
                            <a class="btn btn-primary float-right" asp-action="Index" style="margin-right: 5px;">
                                <i class="fa fa-chevron-left"></i>&nbsp;&nbsp;Listeye Geri Dön
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    var id;

    function deleted() {
        id = document.getElementById("id").value;
        $.ajax({
            url: '/NewVehicleSale/Delete?id=' + id,
            type: 'POST',
            success: function (returnvalue) {
                document.getElementById("swalDefaultSuccess").value = returnvalue.message;
                document.getElementById("swalDefaultSuccess").click();
                window.setTimeout(function () {
                    window.history.back();
                }, 2000);
            },
            error: function (error) {
                document.getElementById("swalDefaultError").value = error.responseText;
                document.getElementById("swalDefaultError").click();
            }
        });
    }
</script>